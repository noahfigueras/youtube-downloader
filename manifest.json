{
  "name": "Youtube Downloader",
  "description": "Download Youtube music and videos with one-click.",
  "version": "1.0",
  "manifest_version": 2,
	"browser_specific_settings": {
		"gecko": {
			"id": "noahfigueras@gmail.com"
		}
	},
  "browser_action": {
    "default_icon": "/images/icons8-youtube-music-32.png",
    "default_title": "Youtube-Downloader",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background-script.js"]
  },
  "permissions": ["tabs", "downloads", "webRequest", "<all_urls>"],
  "icons": {
    "16": "/images/icons8-youtube-music-16.png",
    "32": "/images/icons8-youtube-music-32.png",
    "48": "/images/icons8-youtube-music-48.png",
    "128": "/images/icons8-youtube-music-128.png"
  }
}
